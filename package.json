{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "tsx server/index.ts",
    "build": "tsx static-generator/generator.ts --all",
    "preview": "npx serve dist",
    "db:migrate": "tsx scripts/db-migrate.ts",
    "db:reset": "tsx scripts/db-reset.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "step1": "tsx static-generator/generator.ts --step1",
    "step2": "tsx static-generator/generator.ts --step2",
    "step3": "tsx static-generator/generator.ts --step3",
    "step4": "tsx static-generator/generator.ts --step4",
    "step5": "tsx static-generator/generator.ts --step5",
    "step6": "tsx static-generator/generator.ts --step6",
    "install:db": "npm install --prefix packages/db",
    "install:dashboard": "npm install --prefix apps/dashboard",
    "install:all": "npm run install:db && npm run install:dashboard",
    "postinstall": "npm run install:all",
    "dashboard:dev": "npm run dev --prefix apps/dashboard",
    "dashboard:build": "npm run build --prefix apps/dashboard",
    "dashboard:lint": "npm run lint --prefix apps/dashboard",
    "db:generate": "npm run generate --prefix packages/db",
    "db:postinstall": "npm run postinstall --prefix packages/db"
  },
  "dependencies": {
    "@rss/db": "file:packages/db",
    "@types/luxon": "^3.6.2",
    "axios": "^1.13.2",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.38.1",
    "ejs": "^3.1.9",
    "got": "^14.4.6",
    "iconv-lite": "^0.6.3",
    "luxon": "^3.6.1",
    "marked": "^17.0.0",
    "openai": "^4.86.2",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "rss-parser": "^3.13.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/node": "^20.16.11",
    "drizzle-kit": "^0.30.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "5.6.3",
    "vite": "^5.4.14",
    "vitest": "^3.1.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
